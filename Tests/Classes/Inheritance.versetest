# Test that inheritance from non-Object, non-attribute types produces an error.
assert_semantic_error(3590){ C := class(int) {} }
assert_semantic_error(3590){ C := class(void) {} }
assert_semantic_error(3502){ C := class(array) {} }
assert_semantic_error(3502){ C := class(option) {} }
assert_semantic_error(3506){ C := class(tuple) {} }

# Test that inheritance from multiple classes is not supported.
assert_semantic_error(3589){ C0 := class {}; C1 := class {}; C2 := class(C0, C1) {} }

