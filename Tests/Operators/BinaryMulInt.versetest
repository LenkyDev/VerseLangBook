assert{+1 * +0 = +0}
assert{+0 * +1 = +0}

assert{+1 * +1 = +1}
assert{-1 * -1 = +1}
assert{-1 * +1 = -1}
assert{+1 * -1 = -1}

assert{+1 * +2 = +2}
assert{+2 * +1 = +2}

assert{+1 * -2 = -2}
assert{-2 * +1 = -2}

assert{+9223372036854775807 * +1 = +9223372036854775807}
assert{+1 * +9223372036854775807 = +9223372036854775807}

assert{var x:int = +1; set x *= +0; x = +0}
assert{var x:int = +0; set x *= +1; x = +0}

assert{var x:int = +1; set x *= +1; x = +1}
assert{var x:int = -1; set x *= -1; x = +1}
assert{var x:int = -1; set x *= +1; x = -1}
assert{var x:int = +1; set x *= -1; x = -1}

assert{var x:int = +1; set x *= +2; x = +2}
assert{var x:int = +2; set x *= +1; x = +2}

assert{var x:int = +1; set x *= -2; x = -2}
assert{var x:int = -2; set x *= +1; x = -2}

assert{var x:int = +9223372036854775807; set x *= +1         ; x = +9223372036854775807}
assert{var x:int = +1         ; set x *= +9223372036854775807; x = +9223372036854775807}

bp_vm_only
{
# Runtime error on overflow
assert_runtime_error{-9223372036854775808 * -1}
assert_runtime_error{-1 * -9223372036854775808}

# integer multiply overflow
assert_runtime_error{var x:int = -9223372036854775808; set x *= -1}
assert_runtime_error{var x:int = -1         ; set x *= -9223372036854775808}
}
verse_vm_only
{
assert{-9223372036854775808 * -1 = 9223372036854775807+1}
assert{-1 * -9223372036854775808 = 9223372036854775807+1}

assert{var x:int = -9223372036854775808; set x *= -1; x = 9223372036854775807+1}
assert{var x:int = -1         ; set x *= -9223372036854775808; x = 9223372036854775807+1}
}
