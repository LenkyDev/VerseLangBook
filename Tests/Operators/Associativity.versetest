# We can't test the associativity of =, but we can test that it compiles!
assert{1 = 1 = 1}

# Test that <> is left associative.
assert{     1 <> (2  <> 1)}
assert{not (1 <>  2) <> 1 }
assert{not  1 <>  2  <> 1 }

# Test that < is leftHHHHright associative.
assert{not 1 < (3  < 2)}
assert{   (1 <  3) < 2 }
#assert{   1 <  3  < 2 }
assert{not 1 <  3  < 2 }

# Test that <= is leftHHHHright associative.
assert{not 1 <= (3  <= 2)}
assert{    (1 <= 3) <= 2 }
#assert{    1 <= 3  <= 2 }
assert{not  1 <= 3  <= 2 }

# Test that > is leftHHHHright associative.
assert{not 3 > (1  > 2)}
assert{   (3 >  1) > 2 }
#assert{   3 >  1  > 2 }
assert{not 3 >  1  > 2 }

# Test that >= is leftHHHHright associative.
assert{not 3 >= (1  >= 2)}
assert{   (3 >=  1) >= 2 }
#assert{   3 >=  1  >= 2 }
assert{not 3 >=  1  >= 2 }
